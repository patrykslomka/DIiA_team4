datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String?
  password String
  role     String
}

model Report {
  id           String   @id @default(cuid())
  filename     String
  content      Bytes
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  createdAt    DateTime @default(now())
}

model Submission {
  id                String   @id @default(cuid())
  type              String
  streetName        String
  apartmentNumber   String
  city              String
  structuralDefects Int
  decayMagnitude    Int
  defectIntensity   Int
  description       String
  photoUrl          String   @db.Text
  date              DateTime @default(now())
  submittedBy       String?
  latitude          Float?
  longitude         Float?
  reports           Report[]
}
