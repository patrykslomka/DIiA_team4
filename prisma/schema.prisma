datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String?
  password String
  role     String
}

model Submission {
  id                String   @id @default(cuid())
  type              String
  streetName        String
  apartmentNumber   String
  city              String
  structuralDefects Int
  decayMagnitude    Int
  defectIntensity   Int
  description       String
  photoUrl          String
  date              DateTime @default(now())
  submittedBy       String?
  latitude          Float?
  longitude         Float?
}